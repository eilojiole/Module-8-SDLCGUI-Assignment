<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="352.0" prefWidth="564.0" styleClass="functionalScreen" stylesheets="@style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.CheckInOutController">
   <top>
      <VBox prefHeight="154.0" prefWidth="564.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets bottom="30.0" top="10.0" />
               </VBox.margin>
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="58.0" prefWidth="478.0" text="Check In / Out">
                     <font>
                        <Font name="System Bold Italic" size="40.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="24.0" prefWidth="564.0" />
            <HBox alignment="CENTER" prefHeight="53.0" prefWidth="564.0">
               <children>
                  <TextField fx:id="title" prefHeight="25.0" prefWidth="308.0" />
                  <Button mnemonicParsing="false" onAction="#checkInAction" prefHeight="25.0" prefWidth="89.0" text="Check In">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#checkOutAction" prefHeight="25.0" prefWidth="89.0" text="Check out">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin></Button>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="58.0" prefWidth="564.0">
               <children>
                  <Label fx:id="errorLbl" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="313.0" text=" " />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="bookGrid" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </TableView>
   </center>
</BorderPane>
